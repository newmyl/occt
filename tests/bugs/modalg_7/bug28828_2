puts "========"
puts "OCC28828"
puts "========"
puts ""
############################################################
# New functionalities of BRepFilletAPI_MakeChamfer algorithm
############################################################

pcylinder a1 10 50
ttranslate a1 0 -5 0
box a2 -20 -20 -20  40 40 40
trotate a2 0 0 0  1 0 0  20
bfuse b a1 a2
donly b
explode b f
explode b_2 e
donly b b_2_2

chamfheight result b b_2_2 b_2 2.

checkshape result

checknbshapes result -solid 1 -shell 1 -face 9 -wire 10 -edge 17 -vertex 11 -shape 50

set tolres [checkmaxtol result]

if { ${tolres} > 0.0001} {
   puts "Error: bad tolerance of result"
}

checkprops result -v 73885.9
